    "workflow.ingest": {
      "subject": "cap.workflow.ingest.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "Document/workflow ingest workflow",
      "methods": ["start", "status", "cancel", "describe"],
      "isSystem": false,
      "ttlSeconds": 600
    },
    "workflow.approval": {
      "subject": "cap.workflow.approval.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "Approval workflow capability",
      "methods": ["start", "approve", "reject", "status", "describe"],
      "isSystem": false,
      "ttlSeconds": 600
    },
    "agent.assistant": {
      "subject": "cap.agent.assistant.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "Assistant agent capability",
      "methods": ["chat", "stream", "describe", "tools"],
      "isSystem": false,
      "ttlSeconds": 300
    },
    "agent.summarizer": {
      "subject": "cap.agent.summarizer.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "Summarizer agent capability",
      "methods": ["summarize", "stream", "describe"],
      "isSystem": false,
      "ttlSeconds": 300
    },

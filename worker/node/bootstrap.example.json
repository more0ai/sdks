      "subject": "cap.model.completion.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "LLM completion model capability",
      "methods": ["complete", "stream", "describe", "list"],
      "isSystem": false,
      "ttlSeconds": 300
    },
    "model.embedding": {
      "subject": "cap.model.embedding.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
      "description": "Embedding model capability",
      "methods": ["embed", "describe", "list"],
      "isSystem": false,
      "ttlSeconds": 300
    },
    "prompt.template": {
      "subject": "cap.prompt.template.v1",
      "major": 1,
      "version": "1.0.0",
      "status": "active",
